#!/usr/bin/env ruby

require "text_bringer"

Curses.init_screen
Curses.noecho
Curses.raw
begin
  buffer = TextBringer::Buffer.new
  if ARGV.size > 0
    buffer.insert(File.read(ARGV[0]))
    buffer.beginning_of_buffer
  end
  window = TextBringer::Window.new(buffer, Curses.lines - 1, Curses.cols, 0, 0)
  status_window = Curses::Window.new(1, Curses.cols, Curses.lines - 1, 0)
  status_message = status_window << "Quit by ESC"
  status_window.refresh
  window.redisplay
  while c = window.getch
    if status_message
      status_window.erase
      status_window.refresh
      status_message = nil
    end
    begin
      case c
      when ?\e.ord
        exit
      when Curses::KEY_RIGHT
        buffer.forward_char
      when Curses::KEY_LEFT
        buffer.backward_char
      when Curses::KEY_DOWN
        buffer.next_line
      when Curses::KEY_UP
        buffer.previous_line
      when Curses::KEY_DC
        buffer.delete_char
      when Curses::KEY_BACKSPACE
        buffer.backward_delete_char
      when String
        buffer.insert(c)
      when ?\n.ord
        buffer.insert(?\n)
      else
        if c < 128
          buffer.insert(c.chr)
        elsif c < 256
          buffer.insert([c, window.getch, window.getch].pack("C*").force_encoding("utf-8"))
        else
          status_message = status_window << "KEY:#{c.inspect}"
          status_window.refresh
        end
      end
    rescue
      status_message = status_window << $!.to_s.chomp
      status_window.refresh
#      STDERR.puts $!.class
#      STDERR.puts $!
#      STDERR.puts $!.backtrace
      error = $!
    end
    window.redisplay
  end
ensure
  Curses.echo
  Curses.noraw
end
